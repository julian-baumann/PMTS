{
    "compilerOptions": {
        "downlevelIteration": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "./build",
        "sourceMap": false,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "esModuleInterop": true,
        "allowJs": true,
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}
